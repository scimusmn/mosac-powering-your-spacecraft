<?xml version="1.0"?>
<config>

    <settings>

        <!-- On-screen duration of full orbit animation -->
        <setting id="orbitDuration" value="90" />

        <!-- Increment value for oxygen (o2) meter -->
        <setting id="o2FillRate" value="1" />
        <!-- Decrement value for o2 meter -->
        <setting id="o2DepletionRate" value="-1" />
        <!-- Update interval for o2 meter in milliseconds. Lower value = rise and fall more quickly -->
        <setting id="o2UpdateRate" value="450" />

        <!-- Increment value for fan (circulation) meter -->
        <setting id="circulationFillRate" value="1" />
        <!-- Decrement value for fan meter -->
        <setting id="circulationDepletionRate" value="-1" />
        <!-- Update interval for fan meter in milliseconds. Lower value = rise and fall more quickly -->
        <setting id="circulationUpdateRate" value="100" />

        <!-- Per-second charging of battery while absorbing solar power -->
        <setting id="batteryFillRate" value="15" />

        <!-- Per-second draw of each life system while active -->
        <setting id="oxygenBatteryDraw" value="2.5" />
        <setting id="fanBatteryDraw" value="2" />
        <setting id="foodBatteryDraw" value="1" />
        <setting id="commBatteryDraw" value="1" />
        <setting id="heatBatteryDraw" value="2.5" />
        <setting id="lightsBatteryDraw" value="1" />

        <!-- Multiplier of batteryFillRate while on hard difficulty. Lower value = more difficult -->
        <setting id="hardMultiplierBatteryFillRate" value="1.0" />

        <!-- Multiplier of power draws while on hard difficulty. Higher value = more difficult -->
        <setting id="hardMultiplierBatteryDraw" value="2.5" />

    </settings>

</config>

